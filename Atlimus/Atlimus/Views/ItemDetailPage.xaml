<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atlimus.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Type:" FontSize="Medium" />
        <Label Text="{Binding Type}" FontSize="Small"/>
        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Price, StringFormat=\{0:C\}}" FontSize="Small"/>
        <Label Text="Quantity:" FontSize="Medium" />
        <Label Text="{Binding Quantity}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>